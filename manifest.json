{
    "manifest_version": 2,

    "name": "网页专注阅读器",
    "description": "过滤网页广告，能对选中的单词进行翻译",
    "version": "1.0",
    "minimum_chrome_version": "37",
    "author": "fengyuanzemin",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "网页专注阅读器"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/howler.min.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "cookies",
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "*://*/*",
        "\u003Call_urls\u003E"
    ],
    "content_scripts": [
    {
        "css":["css/shanbay.css"],
        "js": [
            "js/jquery.min.js",
            "js/shanbay.js"
        ],
        "matches": ["*://*/*"]
    },
    {
        "js":[
            "js/jquery.min.js",
            "js/filter.js"
        ],
        "matches": ["*://*/*"]
    },
    {
        "js":[
            "js/jquery.min.js",
            "js/pagination.js"
        ],
        "matches": ["*://*/*"]
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}