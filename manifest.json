{
    "manifest_version": 2,

    "name": "屏幕选词翻译器",
    "description": "能对选中的单词进行翻译",
    "version": "1.2",
    "author": "fengyuanzemin",
    "icons": {
        "48": "icon_48.png",
        "72": "icon_72.png",
        "128": "icon_128.png"
    },
    "browser_action": {
        "default_icon": "icon_48.png",
        "default_popup": "popup.html",
        "default_title": "屏幕选词翻译器"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/howler.min.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "cookies",
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "*://*/*",
        "\u003Call_urls\u003E"
    ],
    "content_scripts": [
    {
        "css":["css/shanbay.css"],
        "js": [
            "js/jquery.min.js",
            "js/shanbay.js"
        ],
        "matches": ["*://*/*"]
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}